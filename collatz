def collatz(number):
    if number == 0:
        return "No zero"
    elif number % 2 == 0:
        print(number // 2)
        return number // 2
    else:
        result = 3 * number + 1
        print(result)
        return result


mynum = input("Give me a number above 0: ") 
while True:       
    try:            
        while mynum != 1:
            mynum = collatz(int(mynum))
            
        print("Done")
        break        
    except (ValueError) as e:
        print("Number should be above 0 \nDone")
        break
